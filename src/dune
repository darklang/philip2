(library
  (name elm)
  (flags (-warn-error +A))
  (libraries core
             yojson
             re2
             str
             reason
             ppx_deriving_yojson.runtime)
  (preprocess (pps ppx_deriving.std
                   ppx_deriving_yojson
                   ))
  (modules elm)
)

